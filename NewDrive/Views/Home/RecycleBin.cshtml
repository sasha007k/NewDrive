@model NewDrive.DTO.FolderFilesModel

<div class="container">

    <div id="products" class="row view-group">

        @if (Model.FoldersInFolder != null)
        {
            @foreach (var folder in Model.FoldersInFolder)
            {
                <div class="item col-xs-4 col-lg-4">
                    <div class="thumbnail card">
                        <div class="caption card-body">
                            <h4 class="group card-title inner list-group-item-heading">
                                @folder.Name
                            </h4>
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-folder" viewBox="0 0 16 16">
                                <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a1.99 1.99 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4H2.19zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139C1.72 3.042 1.95 3 2.19 3h5.396l-.707-.707z" />
                            </svg>
                            <br />
                            <a asp-controller="SubFolder" asp-action="Index" asp-route-id="@folder.Id" class="link-info">Open</a>
                            <br />
                            <a asp-controller="Folder" asp-action="RestoreFolder" asp-route-id="@folder.Id" class="link-info">Restore</a>

                        </div>
                    </div>
                </div>
            }

        }

        @if (Model.FilesInFolder != null)
        {
            @foreach (var file in Model.FilesInFolder)
            {
                <div class="item col-xs-4 col-lg-4">
                    <div class="thumbnail card">
                        <div class="caption card-body">
                            <h4 class="group card-title inner list-group-item-heading">
                                @file.Name
                            </h4>
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
                                <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z" />
                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                            </svg>
                            <br />
                            <a asp-controller="File" asp-action="DownloadFile" asp-route-path="@file.Path" class="link-primary">Download</a>
                            <br />
                            @*<form id="editFileForm" method="post" asp-controller="File" asp-action="UpdateFile" enctype="multipart/form-data"
                                  asp-route-path="@file.Path">
                                <label for="editFile">Edit File</label>
                                <input type="file" class="form-control" name="file" id="editFile" />
                            </form>*@
                            <a asp-controller="File" asp-action="RestoreFile" asp-route-id="@file.Id" class="link-danger">Restore</a>
                        </div>
                    </div>
                </div>
            }

        }

    </div>
</div>


<style>


    label {
        cursor: pointer;
    }

    #uploadFile {
        opacity: 0;
        position: absolute;
        z-index: -1;
    }

    .view-group {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-direction: row;
        flex-direction: row;
        padding-left: 0;
        margin-bottom: 0;
    }

    .thumbnail {
        margin-bottom: 30px;
        padding: 0px;
        -webkit-border-radius: 0px;
        -moz-border-radius: 0px;
        border-radius: 0px;
    }

    .item.list-group-item {
        float: none;
        width: 100%;
        background-color: #fff;
        margin-bottom: 30px;
        -ms-flex: 0 0 100%;
        flex: 0 0 100%;
        max-width: 100%;
        padding: 0 1rem;
        border: 0;
    }

        .item.list-group-item .img-event {
            float: left;
            width: 30%;
        }

        .item.list-group-item .list-group-image {
            margin-right: 10px;
        }

        .item.list-group-item .thumbnail {
            margin-bottom: 0px;
            display: inline-block;
        }

        .item.list-group-item .caption {
            float: left;
            width: 70%;
            margin: 0;
        }

        .item.list-group-item:before, .item.list-group-item:after {
            display: table;
            content: " ";
        }

        .item.list-group-item:after {
            clear: both;
        }
</style>